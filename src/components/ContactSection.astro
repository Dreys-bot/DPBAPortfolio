---

<section id="contact" class="py-20 lg:py-24 relative overflow-hidden">
  <div class="absolute inset-0 cyber-grid opacity-20"></div>
  <div class="absolute top-0 left-0 w-96 h-96 bg-neon-cyan/10 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-4 relative">
    <div class="mb-16 text-center">
      <span class="text-neon-purple font-code">//{contactData.label}</span>
      <h2 class="text-4xl md:text-5xl font-bold mt-2">
        <ColoredText text={contactData.title} wordsPerColor={1} />
      </h2>
      <div class="h-1 w-24 bg-neon-cyan mx-auto mt-4"></div>
      <p class="text-gray-300 max-w-3xl mx-auto mt-6">
        {contactData.description}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <div>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-neon-cyan font-bold mb-2"
              >Name</label
            >
            <input
              type="text"
              id="name"
              class="w-full px-4 py-3 bg-dark-space border border-neon-cyan/30 rounded-lg text-gray-300 focus:border-neon-cyan focus:ring-2 focus:ring-neon-cyan/50 transition duration-300"
              placeholder="Enter your name"
              required
            />
          </div>
          <div>
            <label for="email" class="block text-neon-cyan font-bold mb-2"
              >Email</label
            >
            <input
              type="email"
              id="email"
              class="w-full px-4 py-3 bg-dark-space border border-neon-cyan/30 rounded-lg text-gray-300 focus:border-neon-cyan focus:ring-2 focus:ring-neon-cyan/50 transition duration-300"
              placeholder="Enter your email"
              required
            />
          </div>
          <div>
            <label for="message" class="block text-neon-cyan font-bold mb-2"
              >Message</label
            >
            <textarea
              id="message"
              rows="5"
              class="w-full px-4 py-3 bg-dark-space border border-neon-cyan/30 rounded-lg text-gray-300 focus:border-neon-cyan focus:ring-2 focus:ring-neon-cyan/50 transition duration-300"
              placeholder="Tell me about your project"
              required
            ></textarea>
          </div>
          <Button submit={true} variant="filled" color="purple" class="w-full">
            SEND MESSAGE
          </Button>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-bold text-neon-cyan mb-4">{contactData.contact_title}</h3>
          <p class="text-gray-300">
           {contactData.contact_description}
          </p>
        </div>
        <div class="space-y-4">
          <div class="flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-neon-purple mr-3"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              />
            </svg>
            <a
              href={contactData.email.href}
              class="text-gray-300 hover:text-neon-cyan transition duration-300"
              >{contactData.email.label}</a
            >
          </div>
          <div class="flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-neon-purple mr-3"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              />
            </svg>
            <a
              href={contactData.phone.href}
              class="text-gray-300 hover:text-neon-cyan transition duration-300"
              >{contactData.phone.label}</a
            >
          </div>
        </div>
        <div>
          <h4 class="text-neon-cyan font-bold mb-4">Follow Me</h4>
          <div class="flex items-center gap-4">
            {contactData.socials.map((social) => (
              <a
                href={social.href}
                target="_blank"
                class="text-gray-300 hover:text-neon-cyan transition duration-300"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d={social.icon} />
                </svg>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>