---

<footer class="bg-darker-space border-t border-neon-cyan/20 relative overflow-hidden">
  <div class="max-w-7xl mx-auto py-16 px-4 relative">
    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Brand -->
      <div class="lg:pe-20">
        <Logo />
        <p class="text-gray-400 mt-4">{brandInfo.description}</p>
      </div>
      
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-8">
        <!-- Navigation Sections -->
        {navigationSections.map((section) => (
          <div>
            <h4 class="text-neon-cyan font-bold mb-4">{section.title}</h4>
            <ul class="space-y-2">
              {section.items.map((item) => (
                <li>
                  <a 
                    href={item.href} 
                    class="text-gray-400 hover:text-neon-cyan transition duration-300"
                  >
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
        
        <!-- Social -->
        <div>
          <h4 class="text-neon-cyan font-bold mb-4">Lets Connect</h4>
          <div class="flex flex-wrap items-center gap-4">
            {socialLinks.map((social) => (
              <a 
                href={social.href}
                target={social.target ? social.target : undefined}
                class="text-gray-300 hover:text-neon-cyan transition duration-300">
                <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  class={social.name === 'GitHub' || social.name === 'Twitter' ? 'h-8 w-8' : 'h-7 w-7'}
                  fill="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path d={social.icon} />
                </svg>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="py-8 text-center text-gray-400">
    <p>&copy; {currentYear} {copyright}</p>
  </div>
</footer>